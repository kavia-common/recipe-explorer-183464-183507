# Copy this file to .env and adjust values per environment

# Base URLs and endpoints
REACT_APP_API_BASE=http://localhost:5000/api
REACT_APP_BACKEND_URL=http://localhost:5000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:5000

# Runtime environment
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# Server binding for dev server (npm start)
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Networking / proxy (if behind reverse proxy)
REACT_APP_TRUST_PROXY=false

# App logging and health
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags and experiments
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
